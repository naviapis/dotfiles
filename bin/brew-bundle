# Zsh
grep -q "/usr/local/bin/zsh" /etc/shells
if [ $? -ne 0 ]; then
  sudo sh -c 'echo "/usr/local/bin/zsh" >> /etc/shells'
  chsh -s /usr/local/bin/zsh
fi

# mas-cli
# https://github.com/argon/mas
