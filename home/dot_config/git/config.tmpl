[user]
	name = {{ .user.name | quote }}
	email = {{ .user.email | quote }}
[init]
	defaultBranch = main
[core]
	editor = nvim
[color]
	ui = auto
[pull]
	ff = only
[push]
	autoSetupRemote = true
	useForceIfIncludes = true
[alias]
	pushf = push --force-with-lease --force-if-includes
[ghq]
	root = ~/src
[credential]
	helper = osxkeychain
