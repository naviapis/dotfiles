name: home
services:
  mysql:
    container_name: home_mysql
    image: 'mysql:9.0'
    platform: linux/amd64
    ports:
      - '3306:3306'
    environment:
      MYSQL_ROOT_PASSWORD: '{{ .MYSQL_ROOT_PASSWORD }}'
    volumes:
      - 'mysql:/var/lib/mysql'
  mysql57:
    container_name: home_mysql57
    image: 'mysql:5.7'
    platform: linux/amd64
    ports:
      - '13306:3306'
    environment:
      MYSQL_ROOT_PASSWORD: '{{ .MYSQL_ROOT_PASSWORD }}'
    volumes:
      - 'mysql57:/var/lib/mysql'
volumes:
  mysql:
    driver: local
  mysql57:
    driver: local
